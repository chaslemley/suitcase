<h1>Booking#index</h1>
<% form_tag bookings_path, :method => 'get' do |f| %>

<%= text_field_tag :start_date, :class => 'text_field' %>
<%= text_field_tag :end_date, :class => 'text_field' %>
<%= submit_tag %>

<% end %>
<ul id="unit_list">
<% @units.each do |u| %>
  <li>
    <h4><%= u.name %></h4>
    <p><%= u.description %></p>
    <%= image_tag u.photo(:small) %>
    <% form_tag new_booking_path do |f| %>
      <%= hidden_field_tag :start_date, @arrival %>
      <%= hidden_field_tag :end_date, @departure %>
      <%= hidden_field_tag :unit_id, u.id %>
      <%= submit_tag 'Book Now' %>
    <% end %>
  </li>
<% end %>
</ul>