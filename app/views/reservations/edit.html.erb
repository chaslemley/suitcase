<% form_for(@reservation) do |f| %>
  <fieldset class="edit_reservation">
    <%= f.text_field :start_date, :label => 'Arrival', :class => 'text_field resdatepicker small', :size => nil, :label => { :class => 'small' } %>
    <%= f.text_field :end_date, :label => 'Departure', :class => 'text_field resdatepicker small', :size => nil, :label => { :class => 'small' } %>
    <%= f.collection_select :unit_id, Unit.all, :id, :name, :prompt => true, :label => { :class => 'small' } %>
  </fieldset>
<% end %>