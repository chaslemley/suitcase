<% form_for(@reservation) do |f| %>
  <fieldset class="edit_reservation">
    <%= f.text_field :start_date, :label => 'Arrival', :class => 'text_field editdatepicker small', :size => nil, :label => { :class => 'small' }, :value => @reservation.start_date.strftime('%d %b, %Y') %>
    <%= f.text_field :end_date, :label => 'Departure', :class => 'text_field editdatepicker small', :size => nil, :label => { :class => 'small' }, :value => @reservation.end_date.strftime('%d %b, %Y') %>
    <%= f.collection_select :unit_id, current_account.units.all, :id, :name, :prompt => true, :label => { :class => 'small' } %>
  </fieldset>
  <%= f.submit "Submit", :class => 'submit' %>
<% end %>